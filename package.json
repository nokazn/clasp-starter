{
  "name": "clasp-starter",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nokazn/clasp-starter.git"
  },
  "author": "nokazn",
  "license": "MIT",
  "scripts": {
    "check": "run-s -c \"check:*\"",
    "check:format": "prettier --check \"./src/**/*.{t,j}s\" --ignore-unknown",
    "check:lint": "eslint \"./src/**/*.{t,j}s\" -c ./.eslintrc.js",
    "check:type": "tsc",
    "fix": "run-s -c \"fix:*\"",
    "fix:format": "prettier --write ./src/**/*.{t,j}s",
    "fix:lint": "eslint ./src/*.ts -c ./.eslintrc.js --fix && tsc **/*.ts",
    "test": "jest",
    "build": "tsc --noEmit false -p tsconfig.build.json",
    "push": "clasp push"
  },
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@swc/core": "^1.2.197",
    "@swc/jest": "^0.2.21",
    "@types/google-apps-script": "^1.0.47",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-jest": "^26.5.1",
    "jest": "^28.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.0.3"
  }
}
