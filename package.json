{
  "name": "clasp-starter",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nokazn/clasp-starter.git"
  },
  "author": "nokazn",
  "license": "MIT",
  "scripts": {
    "check:format": "prettier --check ./src/**/*.{t,j}s",
    "check:lint": "eslint ./src/*.ts -c ./.eslintrc.js",
    "check:type": "tsc",
    "fix:format": "prettier --write ./src/**/*.{t,j}s",
    "fix:lint": "eslint ./src/*.ts -c ./.eslintrc.js --fix && tsc **/*.ts",
    "test": "jest",
    "build": "tsc --noEmit false -p tsconfig.build.json",
    "push": "clasp push"
  },
  "devDependencies": {
    "@google/clasp": "^2.3.0",
    "@types/google-apps-script": "^1.0.16",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-jest": "^26.5.0",
    "jest": "^26.5.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
